extends layout 

block content 
    h1= movie.name 
    h5 Written by #{movie.director}
    h5 Posted by: #{added_by}
    p Rating: #{movie.rating}
    p duration: #{movie.duration}
    label Genres:
    ul
    each genre in movie.genres
        li #{genre}

    hr
    //- If user logged in
    if user
        //- Hide edit and delete unless movie was posted by current user
        if user._id == movie.added_by
            //- Link to edit movie
            a.btn.btn-default(href="/movie/edit/" + movie._id) Edit movie
            br
            //- Link to delete movie
            a.btn.delete-movie(href="#", data-id=movie._id) Delete movie